<h1>Prépa42 - Level2 Mobile</h1>
<p>Écris ton code ci-dessous 👇 et lance les tests.</p>

<textarea id="code">function somme(a, b) {
  // TODO : renvoie la somme de a et b
  return a + b;
}</textarea>
<button onclick="runTests()">Lancer les tests</button>

<pre id="output"></pre>
<p id="progress"></p>

<script>
// Liste des tests
const tests = [
  {desc: "somme(2, 3) === 5", test: () => somme(2, 3) === 5},
  {desc: "somme(0, 0) === 0", test: () => somme(0, 0) === 0},
  {desc: "somme(-1, 1) === 0", test: () => somme(-1, 1) === 0},
];

function runTests(){
  let code = document.getElementById('code').value;
  let output = "";
  try {
    eval(code);
    let passed = 0;
    for (let t of tests){
      if (t.test()){
        output += "✅ " + t.desc + "\n";
        passed++;
      } else {
        output += "❌ " + t.desc + "\n";
      }
    }
    let percent = Math.round((passed / tests.length) * 100);
    output += `\nProgression : ${percent}%`;
    document.getElementById('output').innerText = output;
    localStorage.setItem("level2_progress", percent);
    document.getElementById('progress').innerText = "📊 Progression sauvegardée : " + percent + "%";
  } catch(e){
    document.getElementById('output').innerText = "Erreur : " + e;
  }
}

window.onload = () => {
  let saved = localStorage.getItem("level2_progress");
  if (saved){
    document.getElementById('progress').innerText = "📊 Progression précédente : " + saved + "%";
  }
};
</script>

</body>
</html>